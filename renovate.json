{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
    ":semanticCommits",
    ":dependencyDashboardApproval"
 ],
  "packageRules": [
    {
      "matchPackagePatterns":["*"],
      "groupName":"other packages"
    },
    {
      "matchPackagePrefixes":["ArmoniK"],
      "groupName":"ArmoniK"
    },
    {
      "matchPackagePrefixes":["ArmoniK.Api"],
      "groupName":"ArmoniK.Api"
    },
    {
      "matchPackagePrefixes":[ "Htc.Mock" ],
      "groupName":" Htc.Mock"
    },
    {
      "groupName": "NuGet",
      "packageNames": ["^nuget/"]
    },
    {
      "groupName": "Terraform",
      "packageNames": ["^terraform/"]
    },
    {
      "groupName": "Docker",
      "packageNames": ["^docker/"]
    }
  ]
}
